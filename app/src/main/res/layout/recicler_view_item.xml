<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#E2E2E2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#E2E2E2">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagenperfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagecuerpo"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                app:srcCompat="@drawable/userm" />

            <TextView
                android:id="@+id/fintexto"
                android:layout_width="245dp"
                android:layout_height="29dp"
                android:layout_below="@+id/imagecuerpo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="12dp"
                android:text="Lo has abierto hoy" />



            <ImageView
                android:id="@+id/imagetrespuntos"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="13dp"
                app:srcCompat="@drawable/ic_puntos" />

            <TextView
                android:id="@+id/titulotexto"
                android:layout_width="274dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="67dp"
                android:layout_marginTop="19dp"
                android:text="Practica 7 UI Toolbar Menu Floting" />

            <ImageView
                android:id="@+id/imagentexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/word" />

            <ImageView
                android:id="@+id/imagecuerpo"
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="61dp"
                app:srcCompat="@drawable/cuerpodiapositiva" />


    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>